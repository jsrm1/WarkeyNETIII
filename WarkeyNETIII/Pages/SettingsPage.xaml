<Page x:Class="WarkeyNETIII.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarkeyNETIII.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="323" d:DesignWidth="388"
      Title="SettingsPage">

    <Grid>
        <StackPanel Margin="8">
            <TextBlock Text="Warcraft III" FontSize="16"/>
            <TextBlock Text="Game Resolution: " />
            <TextBlock>
<Run Text="{Binding GameWidth}" />
                <Run Text=" x " />
                <Run Text="{Binding GameHeight}" />
            </TextBlock>
            <TextBlock Text="Screen Resolution:" />
            <TextBlock>
                <Run Text="{Binding ScreenWidth}" />
                <Run Text=" x " />
                <Run Text="{Binding ScreenHeight}" />
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
